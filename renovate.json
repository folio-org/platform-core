{
  "baseBranches": ["master", "q2-2020"],
  "branchPrefix": "renovate_",
  "automerge": false,
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "updateLockFiles": false,
  "rangeStrategy": "replace",
  "ignoreDeps": ["react","react-dom","react-redux","redux"],

  "major": {
    "enabled": false
  },
  "minor": {
    "enabled": false
  },
  "patch": {
    "enabled": true
  },

  "regexManagers": [
    { 
      "fileMatch": [ "^install-extras.json$" ],
      "matchStrings": [ "(?<moduleName>(mod|edge)-.*?)-(?<currentValue>[0-9]+\.[0-9]+\.[0-9]+?)" ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "folioorg/{{{moduleName}}}"
    }
  ],

  "packageRules": [
    { 
      "baseBranchList": ["q2-2020"],
      "packagePatterns": ["^@folio/"],
      "groupName": "FOLIO Q1 2020 packages",
      "updateTypes": ["patch"], 
      "enabled": true
    },
    { 
      "baseBranchList": ["master"],
      "packagePatterns": ["^@folio/"],
      "updateTypes": ["minor","patch"], 
      "enabled": true
    }
  ]
}
    
