{
  "name": "@folio/platform-core",
  "version": "1.3.0-SNAPSHOT",
  "license": "Apache-2.0",
  "repository": "folio-org/platform-core",
  "publishConfig": {
    "registry": "https://repository.folio.org/repository/npm-folioci/"
  },
  "nyc": {
    "require": [],
    "exclude": [
      "!**/node_modules/@folio/calendar",
      "!**/node_modules/@folio/circulation",
      "!**/node_modules/@folio/inventory",
      "!**/node_modules/@folio/checkout",
      "!**/node_modules/@folio/checkin",
      "!**/node_modules/@folio/developer",
      "!**/node_modules/@folio/myprofile",
      "!**/node_modules/@folio/organization",
      "!**/node_modules/@folio/plugin-find-instance",
      "!**/node_modules/@folio/plugin",
      "!**/node_modules/@folio/requests",
      "!**/node_modules/@folio/search",
      "!**/node_modules/@folio/servicepoints",
      "!**/node_modules/@folio/tags",
      "!**/node_modules/@folio/users"
    ],
    "all": false
  },
  "scripts": {
    "build": "export NODE_OPTIONS=\"--max-old-space-size=2048 $NODE_OPTIONS\"; stripes build stripes.config.js",
    "stripes": "stripes",
    "start": "stripes serve stripes.config.js",
    "build-module-descriptors": "node ./build-module-descriptors.js",
    "local": "f=stripes.config.js; test -f $f.local && f=$f.local; echo Using config $f; stripes serve $f",
    "test": "echo 'No unit tests implemented'",
    "test-int": "stripes test nightmare stripes.config.js",
    "test-regression": "stripes test nightmare stripes.config.js --run WD/checkout/users/inventory/requests/circulation/organization",
    "lint": "eslint test/ui-testing"
  },
  "dependencies": {
    "@folio/calendar": ">=2.0.5",
    "@folio/checkin": ">=1.3.0",
    "@folio/checkout": ">=1.3.0",
    "@folio/circulation": ">=1.3.0",
    "@folio/developer": ">=1.5.0",
    "@folio/inventory": ">=1.4.0",
    "@folio/myprofile": ">=1.1.0",
    "@folio/organization": ">=2.5.1",
    "@folio/plugin-find-instance": ">=1.1.0",
    "@folio/plugin-find-user": ">=1.3.0",
    "@folio/requests": ">=1.4.1",
    "@folio/search": ">=1.3.0",
    "@folio/servicepoints": ">=1.1.0",
    "@folio/stripes": "^2.0.0",
    "@folio/tags": ">=1.1.0",
    "@folio/users": ">=2.17.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^5.1.1",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "@folio/eslint-config-stripes": "^4.0.0",
    "@folio/stripes-cli": ">=1.8.0",
    "eslint": "^5.6.1",
    "moment": "^2.22.2"
  }
}
